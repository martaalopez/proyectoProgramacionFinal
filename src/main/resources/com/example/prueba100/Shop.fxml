<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.prueba100.ShopController">
    <children>
        <Label layoutX="16.0" layoutY="103.0" text="Username:" />
        <TextField fx:id="txt_username" layoutX="125.0" layoutY="99.0" />

        <Label layoutX="20.0" layoutY="148.0" text="Client ID:" />
        <TextField fx:id="idClientText" layoutX="125.0" layoutY="144.0" />

        <Label layoutX="22.0" layoutY="191.0" text="Product:" />
        <ComboBox fx:id="productCombo" layoutX="131.0" layoutY="187.0" />

        <Label layoutX="24.0" layoutY="239.0" text="Quantity:" />
        <ComboBox fx:id="txtUnidades" layoutX="131.0" layoutY="235.0" />

        <Button fx:id="add" layoutX="131.0" layoutY="294.0" onAction="#addToCart" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Add to Cart" />
        <Button fx:id="finish" layoutX="219.0" layoutY="294.0" onAction="#finishOrder" style="-fx-background-color: #FF5722; -fx-text-fill: white;" text="Finish Order" />

        <TableView fx:id="tablaProductos" layoutX="330.0" layoutY="137.0" prefHeight="150" prefWidth="240.0">
            <columns>
                <TableColumn fx:id="colidProduct" prefWidth="120" text="Product ID" />
                <TableColumn fx:id="colunidades" prefWidth="120" text="Units" />
            </columns>
        </TableView>

        <Button fx:id="goToMenu" layoutX="500" layoutY="20" onAction="#goToMenu" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Go to Menu" />
    </children>
</AnchorPane>
