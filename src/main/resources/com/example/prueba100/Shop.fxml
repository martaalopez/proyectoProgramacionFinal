<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.prueba100.ShopController">
    <children>
        <Label layoutX="109.0" layoutY="157.0" text="Username:" />
        <TextField fx:id="txt_username" layoutX="194.0" layoutY="153.0" />

        <Label layoutX="113.0" layoutY="204.0" text="Client ID:" />
        <TextField fx:id="idClientText" layoutX="194.0" layoutY="200.0" />

        <Label layoutX="115.0" layoutY="250.0" text="Product:" />
        <ComboBox fx:id="productCombo" layoutX="200.0" layoutY="246.0" prefHeight="26.0" prefWidth="138.0" />

        <Label layoutX="115.0" layoutY="300.0" text="Quantity:" />
        <ComboBox fx:id="txtUnidades" layoutX="200.0" layoutY="296.0" prefHeight="26.0" prefWidth="137.0" />

        <Button fx:id="add" layoutX="200.0" layoutY="368.0" onAction="#addToCart" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Add to Cart" />
        <Button fx:id="finish" layoutX="564.0" layoutY="405.0" onAction="#finishOrder" style="-fx-background-color: #FF5722; -fx-text-fill: white;" text="Finish Order" />

        <TableView fx:id="tablaProductos" layoutX="405.0" layoutY="137.0" prefHeight="244.0" prefWidth="240.0">
            <columns>
                <TableColumn fx:id="colidProduct" prefWidth="120" text="Product ID" />
                <TableColumn fx:id="colunidades" prefWidth="120" text="Units" />
            </columns>
        </TableView>

        <Button fx:id="goToMenu" layoutX="464.0" layoutY="46.0" onAction="#goToMenu" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Go to Menu" />
    </children>
</AnchorPane>
